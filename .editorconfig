root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml,toml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2
