{
  "name": "pega-bots",
  "version": "1.1.1",
  "description": "Social networks profiles bot-like analyzer",
  "main": "index.html",
  "scripts": {
    "prebuild": "npm-run-all --parallel lint clean",
    "build:assets": "npm-run-all --parallel build:img build:css build:js",
    "build:js": "npm-run-all compile:js",
    "build:css": "npm-run-all compile:sass compress:css",
    "build": "npm-run-all build:assets cachebust",
    "build:img": "npm-run-all compress:img",
    "postbuild": "cross-env NODE_ENV=production hugo --ignoreCache --cleanDestinationDir",
    "clean": "npm-run-all --parallel clean:*",
    "clean:assets": "rimraf ./static/assets/**/*.{css,img,js,png,gif,jpg,map}",
    "clean:testResults": "rimraf ./testResults/**/*.xml",
    "cachebust": "npm run cachebust:media && npm run cachebust:cssAndJs",
    "cachebust:content": "hashmark -l 8 ./**/*.{gif,jpg,png,svg,mp4}      {dir}/{name}-{hash}{ext} --cwd content | replaceinfiles -s \"{content,data}/**/*.{md,yaml}\"                    -d \"{dir}/{base}\"",
    "cachebust:cssAndJs": "hashmark -l 8 assets/**/*.{js,css}              {dir}/{name}-{hash}{ext} --cwd static  | replaceinfiles -s \"layouts/**/*.html\"                                -d \"{dir}/{base}\"",
    "cachebust:media": "hashmark -l 8 assets/**/*.{gif,jpg,png,svg,mp4} {dir}/{name}-{hash}{ext} --cwd static  | replaceinfiles -s \"{content,data,layouts,static}/**/*.{md,html,css}\" -d \"{dir}/{base}\"",
    "compile:sass": "node-sass ./source/stylesheets --output-style compressed --output ./static/assets/styles --source-map true",
    "compress:css": "postcss --use autoprefixer cssnano --safe -r ./static/assets/styles/**/*.css",
    "compress:img": "imagemin \"./source/images/**/*.{gif,jpg,png,svg}\" --out-dir=./static/assets/images",
    "compile:js": "browserify ./source/scripts/index.js -o ./static/assets/scripts/index.js -t [ babelify ]",
    "prelint": "rimraf ./testResults/**/*.xml",
    "lint": "npm-run-all --parallel lint:*",
    "lint:es": "eslint --ext .es,.js \"./source/scripts/**\" --format junit --output-file ./testResults/esLint.xml",
    "lint:sass": "sass-lint \"./source/stylesheets/**/*.scss\" --verbose --no-exit --format junit --output ./testResults/sassLint.xml",
    "dev": "npm-run-all build:assets --parallel watch start:*",
    "start:hugo": "cross-env NODE_ENV=development hugo server --noHTTPCache=true --ignoreCache --templateMetrics --disableFastRender",
    "pretest": "npm run lint",
    "test": "jest",
    "preversion": "git checkout master && git merge develop",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git checkout develop && git merge master",
    "watch": "npm-run-all --parallel watch:*",
    "watch:sass": "onchange \"./source/stylesheets/**/*.scss\" -- npm run build:css",
    "watch:es6": "onchange \"./source/scripts/**/*.{es,js,json}\" -- npm run build:js",
    "watch:img": "onchange \"./source/images/**/*.{gif,jpg,png,svg}\" -- npm run build:img"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/eokoe__frontend/pega-bots.git"
  },
  "keywords": [
    "html",
    "es6",
    "sass",
    "hugo"
  ],
  "author": "sobral",
  "license": "ISC",
  "homepage": "https://bitbucket.org/eokoe__frontend/pega-bots#readme",
  "devDependencies": {
    "@songkick/replaceinfiles": "^1.1.6",
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^15.2.0",
    "changelog-verify": "^1.1.0",
    "cross-env": "^5.1.3",
    "cssnano": "^3.10.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "hashmark": "^5.0.0",
    "imagemin-cli": "^3.0.0",
    "modularscale-sass": "^3.0.4",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "uglify-js": "^3.3.8",
    "version-changelog": "^2.1.0"
  }
}
